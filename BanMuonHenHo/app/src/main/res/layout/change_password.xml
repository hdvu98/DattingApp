<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/currentPasswdLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Mật khẩu hiện tại"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="#f05457"/>

                <EditText
                    android:id="@+id/confirmNewPasswdText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    app:layout_constraintStart_toStartOf="@+id/newPasswdConfirmLabel"
                    app:layout_constraintTop_toBottomOf="@+id/newPasswdConfirmLabel"
                    android:fontFamily="@font/comfortaa_regular"/>

                <TextView
                    android:id="@+id/newPasswdLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Mật khẩu mới"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/currentPasswdText"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="#f05457"
                   />

                <EditText
                    android:id="@+id/currentPasswdText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    app:layout_constraintStart_toStartOf="@+id/currentPasswdLabel"
                    app:layout_constraintTop_toBottomOf="@+id/currentPasswdLabel"
                    android:fontFamily="@font/comfortaa_regular">

                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/newPasswordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    app:layout_constraintStart_toStartOf="@+id/newPasswdLabel"
                    app:layout_constraintTop_toBottomOf="@+id/newPasswdLabel"
                    android:fontFamily="@font/comfortaa_regular"/>

                <TextView
                    android:id="@+id/newPasswdConfirmLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Nhập lại mật khẩu mới"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/newPasswordText"
                    app:layout_constraintTop_toBottomOf="@+id/newPasswordText"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="#f05457"/>

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>

